@model AhmadHRManagementSystem.Models.EmployeeDepartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee Department</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex gap-3">
                <div class="flex-grow-1">
                    <div class="form-group">
                        <label asp-for="DepartmentName" class="control-label"></label>
                        <div class="d-flex align-items-start gap-2">
                            <div style="flex-grow: 1;">
                                <input asp-for="DepartmentName" class="form-control mt-2" />
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>
                            <div class="d-flex align-items-start gap-2 mt-2">
                                <input type="submit" value="Create" class="btn btn-primary" style="height: 38px;" />
                                <a asp-action="Index" class="btn btn-outline-dark" style="height: 38px;">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
