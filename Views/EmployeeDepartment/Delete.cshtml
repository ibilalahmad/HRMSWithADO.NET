@model AhmadHRManagementSystem.Models.EmployeeDepartment

@{
    ViewData["Title"] = "Delete Department";
}

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this department?</strong>
</div>

<div>
    <h4>Department Details</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="EmployeeDepartment" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
