@model AhmadHRManagementSystem.Models.EmployeeDepartment

@{
    ViewData["Title"] = "Delete Department";
}

<div class="border-bottom pb-3 mb-4">
    <h3 class="text-danger">Delete Department</h3>
    <div class="alert alert-warning mt-3">
        <i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Warning:</strong> Are you sure you want to delete this department?
    </div>
</div>

<div>
    <h4>Department Details</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="EmployeeDepartment" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
