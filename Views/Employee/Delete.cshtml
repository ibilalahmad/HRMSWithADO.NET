@model AhmadHRManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container">
    <div class="border-bottom pb-3 mb-4">
        <h3 class="text-danger">Delete Employee: @Model.DisplayFullName</h3>
        <div class="alert alert-warning mt-3">
            <i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Warning:</strong> Are you sure you want to delete this employee?
        </div>
    </div>

    <div class="row">
        <!-- Personal Information Section -->
        <div class="col-md-6">
            <h5 class="text-secondary text-uppercase mb-3">Personal Information</h5>
            <dl class="row border-bottom pb-3 mb-3">
                <dt class="col-sm-4 fw-bold">Employee ID:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4 fw-bold">Full Name:</dt>
                <dd class="col-sm-8">@Model.DisplayFullName</dd>

                <dt class="col-sm-4 fw-bold">Gender:</dt>
                <dd class="col-sm-8">@Model.Gender</dd>

                <dt class="col-sm-4 fw-bold">Date of Birth:</dt>
                <dd class="col-sm-8">@Model.DisplayDateOfBirth (@Model.DisplayAge)</dd>

                <dt class="col-sm-4 fw-bold">CNIC:</dt>
                <dd class="col-sm-8">@Model.CNIC</dd>
            </dl>
        </div>

        <!-- Employment Information Section -->
        <div class="col-md-6">
            <h5 class="text-secondary text-uppercase mb-3">Employment Information</h5>
            <dl class="row border-bottom pb-3 mb-3">
                <dt class="col-sm-4 fw-bold">Designation:</dt>
                <dd class="col-sm-8">@Model.DesignationName</dd>

                <dt class="col-sm-4 fw-bold">Department:</dt>
                <dd class="col-sm-8">@Model.DepartmentName</dd>

                <dt class="col-sm-4 fw-bold">Hire Date:</dt>
                <dd class="col-sm-8">@Model.DisplayHireDate</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </form>
    </div>
</div>

<style>
    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.875em;
    }

    dt {
        font-weight: 500;
        color: #6c757d;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
    }

    .border-bottom {
        border-bottom: 1px solid #dee2e6 !important;
    }
</style>