@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card border-3 rounded-4 shadow-sm">
                <div class="card-body p-5">

                    <h2 class="text-center mb-4">Login</h2>

                    <!-- Display Error from ViewBag -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <!-- Display Error from Query (e.g., Unauthorized Role) -->
                    @if (Context.Request.Query["error"].Any())
                    {
                        <div class="alert alert-danger">
                            @Context.Request.Query["error"]
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <!-- Identifier Input (Username or Email) -->
                        <div class="mb-3">
                            <label for="identifier" class="form-label">Username or Email:</label>
                            <input type="text" class="form-control" id="identifier" name="identifier" placeholder="Enter your username or email" required />
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
