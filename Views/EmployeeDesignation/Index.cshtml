@model IEnumerable<AhmadHRManagementSystem.Models.EmployeeDesignation>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["UpdateMessage"] != null)
{
    <div class="alert alert-success">@TempData["UpdateMessage"]</div>
}

<h2 class="text-center">Employee Designation List</h2>
<div class="d-flex justify-content-between">
    <a class="btn btn-primary my-2 mb-3" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>Add New Employee Designation
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="text-center">
            <tr class="text-center">
                <th>Id</th>
                <th>Designation Name</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empDesignation in Model.OrderBy(e => e.Id))
            {
                <tr class="text-center">
                    <td>@empDesignation.Id</td>
                    <td>@empDesignation.DesignationName</td>
                    <td>@empDesignation.DepartmentName.DepartmentName</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="EmployeeDesignation" asp-route-id="@empDesignation.Id"><i class="bi bi-pencil-square me-2"></i>Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="EmployeeDesignation" asp-route-id="@empDesignation.Id"><i class="bi bi-trash3-fill me-2"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

